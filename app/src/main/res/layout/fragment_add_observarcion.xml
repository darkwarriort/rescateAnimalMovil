<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DetalleReporte">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:paddingBottom="60dp"
        android:orientation="vertical"
        >
        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="16sp"-->
        <!--android:text="@string/complete_form_titulo"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="100dp">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/register_name_mascota_layout"
                    android:layout_width="match_parent"
                    style="@style/TextLabel"

                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/register_name_mascota_input"
                        style="@style/Widget.Design.TextInputEditText"
                        fontPath="fonts/Lato-Light.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/complete_form_nombre_mascota"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/complete_form_especie_layout"
                    android:layout_width="match_parent"
                    style="@style/TextLabel"

                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/complete_form_especie_input"
                        fontPath="fonts/Lato-Light.ttf"
                        style="@style/Widget.Design.TextInputEditText"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/complete_form_especie"
                        android:inputType="textCapWords"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/complete_form_raza_layout"
                    android:layout_width="match_parent"
                    style="@style/TextLabel"

                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/complete_form_raza_input"
                        fontPath="fonts/Lato-Light.ttf"
                        style="@style/Widget.Design.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/complete_form_raza"
                        android:inputType="textCapWords"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgPhoto"
                android:padding="16dp"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/complete_form_color_layout"
            android:layout_width="match_parent"
            style="@style/TextLabel"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/complete_form_color_input"
                fontPath="fonts/Lato-Light.ttf"
                style="@style/Widget.Design.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/complete_form_color"
                android:inputType="textCapWords"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/complete_form_edad_layout"
            style="@style/TextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/complete_form_edad_input"
                fontPath="fonts/Lato-Light.ttf"
                style="@style/Widget.Design.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/complete_form_edad"
                android:inputType="number"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/complete_form_sexo_layout"
            android:layout_width="match_parent"
            style="@style/TextLabel"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/complete_form_sexo_input"
                fontPath="fonts/Lato-Light.ttf"
                style="@style/Widget.Design.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/complete_form_sexo"
                android:inputType="textCapWords"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/complete_form_descripcion_layout"
            android:layout_width="match_parent"
            style="@style/TextLabel"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/complete_form_descripcion_input"
                fontPath="fonts/Lato-Light.ttf"
                style="@style/Widget.Design.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/complete_form_descripcion"
                android:inputType="textCapWords"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/complete_form_reporte_layout"
            style="@style/TextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/complete_form_reporte_input"
                fontPath="fonts/Lato-Light.ttf"
                style="@style/Widget.Design.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/complete_form_tipo_reporte"
                android:inputType="textCapWords"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/complete_form_observacion_layout"
            style="@style/TextLabel"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/complete_form_observacion_input"
                fontPath="fonts/Lato-Light.ttf"
                style="@style/Widget.Design.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/complete_form_observacion"
                android:inputType="textCapWords"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            style="@style/TextLabel"
            android:layout_height="wrap_content"
            android:id="@+id/layoutLogeado"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:text="ENCONTRADO"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/checkbox"
                    android:layout_alignParentRight="true"
                    />


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/complete_form_view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_rounded"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:text="Ver comentarios" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <Button
                android:id="@+id/complete_form_save"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/colorOnTextButton"
                android:layout_height="50dp"

                android:background="@drawable/button_rounded"
                android:text="@string/complete_form_save" />
            <Button
                android:id="@+id/complete_form_exit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textColor="@color/colorOnTextButton"
                android:layout_margin="5dp"
                android:background="@drawable/button_rounded"
                android:text="@string/complete_form_exit" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>