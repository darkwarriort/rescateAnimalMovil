<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".fragment.Servicios">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"

        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:id="@+id/btnDonaciones"
            card_view:cardCornerRadius="20dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:paddingTop="5dp"
                android:textSize="22sp"
                android:layout_gravity="center|top"

                android:text="Donaciones"/>
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:gravity="center"
                android:paddingTop="25dp"
                android:layout_gravity="center"
                android:src="@drawable/donacion" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:id="@+id/btnSalud"
            android:layout_height="120dp"
            card_view:cardCornerRadius="20dp"

            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="22sp"
                android:paddingTop="5dp"

                android:layout_gravity="center|top"
                android:text="Salud"/>

            <ImageView
                android:id="@+id/image_salud"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:gravity="center"
                android:paddingTop="25dp"
                android:layout_gravity="center"

                android:src="@drawable/hospital"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:id="@+id/btnEvento"
        card_view:cardCornerRadius="20dp"

        android:layout_height="120dp">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:layout_marginBottom="15dp"
            android:paddingTop="5dp"

            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:text="Evento"/>

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_evento"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:gravity="center|center_horizontal"
            android:layout_gravity="center|bottom"
            android:src="@drawable/calendario"/>
    </android.support.v7.widget.CardView>
</LinearLayout>